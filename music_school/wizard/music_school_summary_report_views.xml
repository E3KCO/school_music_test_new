<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_music_school_summary_report" model="ir.ui.view">
            <field name="name">music.school.summary.report.form</field>
            <field name="model">music.school.summary.report</field>
            <field name="arch" type="xml">
            <form string="Leaves by Department">
                <group>
                    <field name="date_from" />
                    <field name="date_to"/>
                    <field name="lesson_type"/>
                    <field name="classes"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_music_school_summary_report" model="ir.actions.act_window">
            <field name="name">Report By Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">music.school.summary.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Report by Classes"
            parent="menu_music_student_root"
            action="action_music_school_summary_report"
            id="menu_music_school_report"
            sequence="300"/>

</odoo>
