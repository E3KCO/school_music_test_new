<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_postponed_credit" model="ir.ui.view">
            <field name="name">view.postponed.credit</field>
            <field name="model">postponed.credit</field>
            <field name="arch" type="xml">
                <form string="Postponed Info">

                    <group>
                        <h1 colspan="4" nolabel="1"
                            string="Veuillez renseigner les informations de la nouvelle leÃ§on"/>
                        <field name="credit_id" />
                    </group>
                    <group>

                        <field name="next_start_date" />
                        <field name="next_end_date" />
                    </group>
                    <footer>
                        <button name="action_create_new_lesson" string="Validate" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_postponed_credit" model="ir.actions.act_window">
            <field name="name">action.view.postponed.credit</field>
            <field name="res_model">postponed.credit</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_postponed_credit"/>
            <field name="target">new</field>
        </record>
</odoo>